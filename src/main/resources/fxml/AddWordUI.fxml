<AnchorPane prefHeight="450.0" prefWidth="425.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AddWordController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" styleClass="left-bar" stylesheets="@../style.css" BorderPane.alignment="CENTER">
               <children>
                  <Pane prefHeight="35.0" prefWidth="425.0">
                     <children>
                        <Label fx:id="Label1" layoutX="14.0" layoutY="7.0" text="New Word" textFill="#ecfc0b">
                           <font>
                              <Font name="SansSerif Bold Italic" size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </Pane>
                  <HBox prefHeight="35.0" prefWidth="403.0" styleClass="search-box" stylesheets="@../style.css">
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </VBox.margin>
                     <children>
                        <TextField fx:id="inputBar" prefHeight="25.0" prefWidth="325.0" styleClass="transparent" stylesheets="@../style.css">
                           <HBox.margin>
                              <Insets left="10.0" top="5.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
                  <Pane prefHeight="35.0" prefWidth="425.0">
                     <children>
                        <Label layoutX="14.0" layoutY="9.0" />
                        <Label fx:id="Label2" layoutX="14.0" layoutY="10.0" text="Definition of the word" textFill="#ecfc0b">
                           <font>
                              <Font name="SansSerif Bold" size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </Pane>
                  <VBox prefHeight="305.0" prefWidth="425.0">
                     <children>
                        <HTMLEditor fx:id="htmlEditor" htmlText="&lt;html&gt;&lt;head&gt;&lt;/head&gt;&lt;body contenteditable=&quot;true&quot;&gt;&lt;/body&gt;&lt;/html&gt;" prefHeight="297.0" prefWidth="425.0" />
                     </children>
                  </VBox>
                  <HBox prefHeight="35.0" prefWidth="425.0">
                     <children>
                        <Pane prefHeight="35.0" prefWidth="260.0" />
                        <Button mnemonicParsing="false" onMouseClicked="#saveButton" styleClass="search-box-search-button" stylesheets="@../style.css" text="Save the new word">
                           <font>
                              <Font name="SansSerif Bold" size="15.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
