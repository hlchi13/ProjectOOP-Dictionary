<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" styleClass="background" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.TranslateController">
   <children>
      <Pane layoutX="350.0" layoutY="164.0" prefHeight="42.0" prefWidth="312.0" style="-fx-background-color: #fff;" styleClass="translate-bar">
         <children>
            <Button fx:id="speakToTrans" layoutX="6.0" layoutY="2.0" mnemonicParsing="false" styleClass="dictionary-btn" stylesheets="@../style.css">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/icons/icons8-audio-40.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </Pane>
      <Pane layoutX="38.0" layoutY="164.0" prefHeight="42.0" prefWidth="312.0" style="-fx-background-color: #fff;" styleClass="translate-bar">
         <children>
            <Button fx:id="speakTarget" layoutX="7.0" layoutY="2.0" mnemonicParsing="false" styleClass="dictionary-btn" stylesheets="@../style.css">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/icons/icons8-audio-40.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="speakTarget1" layoutX="53.0" layoutY="2.0" mnemonicParsing="false" onMouseClicked="#clear" styleClass="dictionary-btn" stylesheets="@../style.css">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" styleClass="transparent">
                     <image>
                        <Image url="@../img/icons/icons8-erase-40.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </Pane>
      <Pane layoutX="38.0" layoutY="95.0" prefHeight="69.0" prefWidth="623.0" styleClass="header-translate">
         <children>
            <Button fx:id="changeBtn" layoutX="282.0" layoutY="11.0" mnemonicParsing="false" prefHeight="48.0" prefWidth="60.0" styleClass="dictionary-btn">
               <graphic>
                  <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/icons/icons8-change-40.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Label fx:id="labelFrom" alignment="CENTER" layoutY="10.0" prefHeight="50.0" prefWidth="247.0" text="From" textFill="#2f3c7f">
               <font>
                  <Font name="System Bold Italic" size="20.0" />
               </font>
            </Label>
            <Label fx:id="labelTo" alignment="CENTER" layoutX="370.0" layoutY="10.0" prefHeight="50.0" prefWidth="247.0" text="To" textFill="#2f3c7f">
               <font>
                  <Font name="System Bold Italic" size="20.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <Button fx:id="transBtn" layoutX="253.0" layoutY="432.0" mnemonicParsing="false" prefHeight="53.0" prefWidth="193.0" styleClass="trans-btn" text="Translate" textFill="#2f3c7f">
         <font>
            <Font name="System Bold" size="20.0" />
         </font></Button>
      <TextArea fx:id="textFrom" layoutX="38.0" layoutY="204.0" onKeyReleased="#translateWord" prefHeight="221.0" prefWidth="312.0" styleClass="translate-field" wrapText="true">
         <font>
            <Font size="16.0" />
         </font>
      </TextArea>
      <TextArea fx:id="textTo" editable="false" layoutX="350.0" layoutY="204.0" onKeyReleased="#translateWord" prefHeight="221.0" prefWidth="312.0" styleClass="translate-field" wrapText="true">
         <font>
            <Font size="16.0" />
         </font>
      </TextArea>
      <Label alignment="CENTER" layoutY="-5.0" prefHeight="89.0" prefWidth="700.0" text="Translate" textFill="#2f3c7f">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
