<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.BookmarkController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <left>
            <VBox prefHeight="400.0" prefWidth="177.0" BorderPane.alignment="CENTER">
               <children>
                  <Pane prefHeight="50.0" prefWidth="177.0">
                     <children>
                        <Label fx:id="Label1" layoutX="14.0" layoutY="15.0" text="Bookmark">
                           <font>
                              <Font name="SansSerif Bold" size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </Pane>
                  <Pane prefHeight="350.0" prefWidth="177.0">
                     <children>
                        <ListView fx:id="list" layoutX="14.0" onKeyPressed="#enterTheWord" onMouseClicked="#clickTheWord" prefHeight="325.0" prefWidth="150.0" />
                     </children>
                  </Pane>
               </children>
            </VBox>
         </left>
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" stylesheets="@../style.css" BorderPane.alignment="CENTER">
               <children>
                  <Pane prefHeight="50.0" prefWidth="373.0">
                     <children>
                        <Button layoutX="280.0" layoutY="9.0" mnemonicParsing="false" onMouseClicked="#deleteTheWord" text="Delete">
                           <font>
                              <Font name="SansSerif Bold" size="18.0" />
                           </font>
                        </Button>
                        <Label fx:id="Label2" layoutX="14.0" layoutY="15.0" text="Definition">
                           <font>
                              <Font name="SansSerif Bold" size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </Pane>
                  <TextArea fx:id="definitionSite" editable="false" prefHeight="325.0" prefWidth="373.0">
                     <VBox.margin>
                        <Insets left="7.5" right="7.5" />
                     </VBox.margin>
                  </TextArea>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
